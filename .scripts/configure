#!/bin/bash

CONFIGURE=''

register_script()
{
    SPACE='                             '
    CONFIGURE="${CONFIGURE}$(printf "\n%s %s %s" $1 "${SPACE:${#1}" $2)"
}

register_script 'audio-sink' 'Audio sink interface'

echo "${CONFIGURE}" | tail -n +2 | dmenu \
    -z \
    -dim 0.7 \
    -y 250 \
    -x 150 \
    -w 1620 \
    -fn 'Tewi-10:normal' \
    -l 25 \
    -nb '#222' \
    -nf '#FFF' \
    -sb '#000' \
    -sf '#1793d0'
